<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/layout_title" android:id="@+id/titleLayout"/>

    <LinearLayout
        android:id="@+id/confirm_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:gravity="right|center"
        android:paddingRight="10dp"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/confirm_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认收货"
            android:background="@drawable/generic_btn_border_accentcolor_bg"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/TextSize_14"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/payment_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grayText"
            android:text="实际支付："
            android:textSize="@dimen/TextSize_12"
            android:paddingLeft="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/redText"
            android:text="￥"
            android:textSize="@dimen/TextSize_10"
            />

        <TextView
            android:id="@+id/text_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/redText"
            android:textSize="20sp"
            android:layout_weight="1.0"
            />

        <TextView
            android:id="@+id/text_payment"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="去支付"
            android:textColor="@color/white"
            android:textSize="@dimen/TextSize_14"
            android:gravity="center"
            android:background="@drawable/abc_generic_theme_btn"
            />
    </LinearLayout>

    <com.guaigou.cd.minutestohome.view.ZRefreshingView
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/titleLayout"
        android:layout_above="@id/payment_layout"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            >

            <FrameLayout
                android:id="@+id/layout_parent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/layout_main"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@color/white"
                            android:paddingLeft="@dimen/activity_horizontal_margin"
                            android:paddingRight="@dimen/activity_horizontal_margin"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="订单信息"
                                android:textColor="@color/blackText"
                                android:paddingTop="6dp"
                                android:paddingBottom="6dp"
                                android:textStyle="bold"
                                android:textSize="@dimen/TextSize_16"
                                />
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.1dp"
                                android:background="@color/divider"/>
                            <TableLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                >
                                <TableRow android:paddingTop="6dp"
                                    android:paddingBottom="6dp">
                                    <TextView style="@style/ContentTextView"
                                        android:text="订单号"
                                        android:textColor="@color/grayText"
                                        android:textSize="@dimen/TextSize_14"
                                        />
                                    <TextView android:id="@+id/orderCodeView"
                                        android:textColor="@color/grayText"
                                        android:textSize="@dimen/TextSize_14"
                                        android:layout_marginLeft="@dimen/order_item_padding_left"
                                        />
                                </TableRow>
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.1dp"
                                    android:background="@color/divider"/>
                                <TableRow android:paddingTop="6dp"
                                    android:paddingBottom="6dp">
                                    <TextView style="@style/ContentTextView"
                                        android:text="订单状态"
                                        android:textColor="@color/grayText"
                                        android:textSize="@dimen/TextSize_14"
                                        />
                                    <TextView android:id="@+id/orderStatusView"
                                        android:textColor="@color/themeColor"
                                        android:textSize="@dimen/TextSize_14"
                                        android:layout_marginLeft="@dimen/order_item_padding_left"
                                        />
                                </TableRow>
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.1dp"
                                    android:background="@color/divider"/>
                                <TableRow android:paddingTop="6dp"
                                    android:paddingBottom="6dp">
                                    <TextView style="@style/ContentTextView"
                                        android:text="下单时间"
                                        android:textColor="@color/grayText"
                                        android:textSize="@dimen/TextSize_14"
                                        />
                                    <TextView android:id="@+id/orderTimeView"
                                        android:textColor="@color/grayText"
                                        android:textSize="@dimen/TextSize_14"
                                        android:layout_marginLeft="@dimen/order_item_padding_left"
                                        />
                                </TableRow>
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.1dp"
                                    android:background="@color/divider"/>
                                <TableRow android:paddingTop="6dp"
                                    android:paddingBottom="6dp">
                                    <TextView style="@style/ContentTextView"
                                        android:text="送达时间"
                                        android:textColor="@color/grayText"
                                        android:textSize="@dimen/TextSize_14"
                                        />
                                    <TextView android:id="@+id/orderDeliveryView"
                                        android:textColor="@color/grayText"
                                        android:textSize="@dimen/TextSize_14"
                                        android:layout_marginLeft="@dimen/order_item_padding_left"
                                        />
                                </TableRow>
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.1dp"
                                    android:background="@color/divider"/>
                                <TableRow android:paddingTop="5dp"
                                    android:paddingBottom="5dp"
                                    android:id="@+id/layout_note"
                                    >
                                    <TextView style="@style/ContentTextView"
                                        android:text="备注"
                                        android:textColor="@color/grayText"
                                        android:textSize="@dimen/TextSize_14"
                                        />
                                    <TextView android:id="@+id/orderNoteView"
                                        android:textColor="@color/grayText"
                                        android:textSize="@dimen/TextSize_14"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/order_item_padding_left"
                                        android:layout_weight="1.0"
                                        android:lines="1"
                                        android:ellipsize="end"
                                        />
                                </TableRow>
                            </TableLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@color/white"
                            android:paddingLeft="@dimen/activity_horizontal_margin"
                            android:paddingRight="@dimen/activity_horizontal_margin"
                            android:layout_marginTop="10dp"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="费用明细"
                                android:textColor="@color/blackText"
                                android:paddingTop="6dp"
                                android:paddingBottom="6dp"
                                android:textStyle="bold"
                                android:textSize="@dimen/TextSize_16"
                                />
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:background="@color/divider"/>

                            <LinearLayout
                                android:id="@+id/CostDetailsContainer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:orientation="vertical"
                                android:background="@color/white"
                                />
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:background="@color/divider"/>
                            <TableLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                >
                                <TableRow android:paddingTop="6dp"
                                    android:paddingBottom="6dp">
                                    <TextView style="@style/ContentTextView"
                                        android:text="商品总金额"
                                        android:textColor="@color/blackText"
                                        android:textSize="@dimen/TextSize_14"
                                        android:layout_weight="1.0"
                                        />
                                    <TextView android:id="@+id/orderProductsPriceView"
                                        android:textColor="@color/grayText"
                                        android:textSize="@dimen/TextSize_14"
                                        android:layout_marginLeft="@dimen/order_item_padding_left"
                                        android:gravity="right"
                                        />
                                </TableRow>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.5dp"
                                    android:background="@color/divider"/>

                                <view android:id="@+id/layout_products"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    class="com.guaigou.cd.minutestohome.view.OrderProductsDetailsView"
                                    android:layout_marginLeft="@dimen/item_padding_horizontal"
                                    />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.5dp"
                                    android:background="@color/divider"/>

                                <TableRow android:paddingTop="6dp"
                                    android:paddingBottom="6dp">
                                    <TextView style="@style/ContentTextView"
                                        android:text="运费"
                                        android:textColor="@color/blackText"
                                        android:textSize="@dimen/TextSize_14"
                                        android:layout_weight="1.0"
                                        />
                                    <TextView android:id="@+id/orderFreightPriceView"
                                        android:textColor="@color/grayText"
                                        android:textSize="@dimen/TextSize_14"
                                        android:text="￥0.0"
                                        android:layout_marginLeft="@dimen/order_item_padding_left"
                                        android:gravity="right"
                                        />
                                </TableRow>
                                <TableRow android:padding="8dp"
                                    android:visibility="gone"
                                    >
                                    <TextView style="@style/ContentTextView"
                                        android:text="积分"
                                        android:textColor="@color/blackText"
                                        android:textSize="@dimen/TextSize_14"
                                        android:layout_weight="1.0"
                                        />
                                    <TextView android:id="@+id/orderScorePriceView"
                                        android:textColor="@color/grayText"
                                        android:textSize="@dimen/TextSize_14"
                                        android:text="-￥1.5"
                                        android:layout_marginLeft="@dimen/order_item_padding_left"
                                        android:gravity="right"
                                        />
                                </TableRow>
                            </TableLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:background="@color/divider"/>
                            <LinearLayout
                                android:id="@+id/layout_real_pay"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="0dip"
                                    android:layout_height="wrap_content"
                                    android:text="实付￥"
                                    android:paddingTop="10dp"
                                    android:paddingBottom="10dp"
                                    android:layout_marginTop="1dp"
                                    android:background="@color/white"
                                    android:gravity="right"
                                    android:textSize="@dimen/TextSize_14"
                                    android:layout_weight="1.0"
                                    />
                                <TextView
                                    android:id="@+id/orderPaymentView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="10dp"
                                    android:paddingBottom="10dp"
                                    android:layout_marginTop="1dp"
                                    android:background="@color/white"
                                    android:gravity="right"
                                    android:textColor="@color/redText"
                                    />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@color/white"
                            android:paddingLeft="@dimen/activity_horizontal_margin"
                            android:paddingRight="@dimen/activity_horizontal_margin"
                            android:layout_marginTop="10dp"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="收货信息"
                                android:textColor="@color/blackText"
                                android:paddingTop="6dp"
                                android:paddingBottom="6dp"
                                android:textStyle="bold"
                                android:textSize="@dimen/TextSize_16"
                                />

                            <TableLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                >
                                <TableRow android:paddingTop="6dp"
                                    android:paddingBottom="6dp">
                                    <TextView style="@style/ContentTextView"
                                        android:text="收货人"
                                        android:textColor="@color/blackText"
                                        android:textSize="@dimen/TextSize_14"
                                        />
                                    <TextView android:id="@+id/orderContactsView"
                                        android:textColor="@color/grayText"
                                        android:textSize="@dimen/TextSize_14"
                                        android:layout_marginLeft="@dimen/order_item_padding_left"
                                        />
                                </TableRow>
                                <TableRow android:paddingTop="6dp"
                                    android:paddingBottom="6dp">
                                    <TextView style="@style/ContentTextView"
                                        android:text="收货地址"
                                        android:textColor="@color/blackText"
                                        android:textSize="@dimen/TextSize_14"
                                        />
                                    <TextView android:id="@+id/orderAddressView"
                                        android:textColor="@color/grayText"
                                        android:textSize="@dimen/TextSize_14"
                                        android:layout_marginLeft="@dimen/order_item_padding_left"
                                        />
                                </TableRow>
                            </TableLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/layout_empty"
                        android:orientation="vertical" android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="获取订单信息失败，点击刷新" android:textSize="12sp"
                        android:gravity="center"
                        android:drawableTop="@mipmap/img_load_failure"
                        android:drawablePadding="3dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20dp"
                        />
            </FrameLayout>
        </ScrollView>
    </com.guaigou.cd.minutestohome.view.ZRefreshingView>
</RelativeLayout>