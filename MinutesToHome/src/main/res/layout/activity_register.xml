<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/white"
    android:id="@+id/Container"
    >

    <include layout="@layout/layout_title"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"
        android:layout_marginTop="20dp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/user_login_name"

            />

        <EditText
            android:id="@+id/user_login_name"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:textSize="@dimen/TextSize_14"
            android:hint="请输入您的手机号"
            android:layout_weight="1.0"
            android:inputType="phone"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/divider"
            />

        <TextView
            android:id="@+id/text_validatecode"
            style="@style/ContentTextView"
            android:text="获取验证码"
            android:textColor="@color/grayText"
            android:layout_gravity="center"
            android:gravity="center"
            android:minWidth="80dp"
            android:layout_height="match_parent"
            android:background="@drawable/abc_generic_pressed"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/user_login_pwd"

            />

        <EditText
            android:id="@+id/user_login_validatecode"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:textSize="@dimen/TextSize_14"
            android:hint="请输入您的验证码"
            android:layout_weight="1.0"
            />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"
        />

    <TextView
        android:id="@+id/text_nextstep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="@dimen/TextSize_14"
        android:textColor="@color/white"
        android:background="@drawable/abc_generic_theme_btn"
        android:text="下一步"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        />

</LinearLayout>