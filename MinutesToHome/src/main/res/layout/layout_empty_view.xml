<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <com.guaigou.cd.minutestohome.view.ZRefreshingView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/refreshLayoutEmptyView">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:orientation="vertical" android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/text_empty"
                    android:text="没有数据" android:textSize="12sp"
                    android:gravity="center" android:layout_centerInParent="true"
                    android:drawableTop="@mipmap/img_load_failure"
                    android:drawablePadding="3dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    />

            </FrameLayout>
        </ScrollView>
    </com.guaigou.cd.minutestohome.view.ZRefreshingView>
</FrameLayout>